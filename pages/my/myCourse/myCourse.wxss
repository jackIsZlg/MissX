/* pages/my/myCourse/myCourse.wxss */
.myCourse{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.myCourse_list{
  width: 710rpx;
  display: flex;
  justify-content: space-between;
  padding: 35rpx 0;
  border-bottom: 1rpx solid #fbfbfb;
}
.cover{
  width:220rpx;
  height: 138rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin:0 20rpx 0 10rpx;
}
.cover image{
  width: 100%;
  height: 100%;
}
.basic{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.basic text{
  font-size: 30rpx;
  color: #666;
}
.basic view{
  width:200rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 28rpx;
  color: #64d9f3;
  border:2rpx solid #64d9f3;
  border-radius: 24rpx;
}