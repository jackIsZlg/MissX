/* pages/my/my.wxss */
page{
  background: #f4f4f7;
}
.my_info{
  width:750rpx;
  height:344rpx;
  background: url('https://miss.xuanyantech.com/img/WeChat/myCenter_banner.jpg') no-repeat;
  background-size: 100% 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.my_head{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border:1rpx solid #fff;
  margin:0 30rpx;
}
.my_head image{
  width: 120rpx;
  height: 120rpx;
}
.my_basic{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  height: 132rpx;
}
.my_name{
  font-size: 40rpx;
  color: #333;
}
.my_grade{
  display: flex;
  margin-top:15rpx;
}
.my_grade view{
  width:135rpx;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  background: #fff;
  border-radius: 10rpx 10rpx 0 10rpx;
}
.my_grade text{
  font-size: 24rpx;
  color: #fffefe;
  margin-left: 18rpx;
}
.my_community {
  display: flex;
  align-items: flex-end;
  height: 132rpx;
  margin-right:20rpx;
}
.my_community image{
  width:104rpx;
  height: 40rpx;
}
.my_order{
  width:750rpx;
  background: #fff;
}
.my_order_title{
  width: 710rpx;
  height: 87rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin:0 20rpx;
  padding:0 45rpx 0 15rpx;
  border-bottom:1rpx solid #eee;
  font-size: 26rpx;
  color: #333;
  background:url('https://miss.xuanyantech.com/img/WeChat/myCenter_link_arrow.png') no-repeat 675rpx center;
  background-size:13rpx 24rpx;
}
.my_order_body{
  width:750rpx;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.my_order_list{
  display: flex;
  flex-direction: column;
}
.my_order_list image{
  width: 73rpx;
  height: 73rpx;
}
.my_order_list text{
  font-size: 26rpx;
  color: #999;
  margin: 18rpx 0;
}
.my_link{
  width:750rpx;
  border-top:20rpx solid #f4f4f7;
  background: #fff;
}
.my_link_list{
  width: 710rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  margin:0 20rpx;
  padding-left:15rpx;
  border-bottom:1rpx solid #f5f5f8;
  background:url('https://miss.xuanyantech.com/img/WeChat/myCenter_link_arrow.png') no-repeat 675rpx center;
  background-size:13rpx 24rpx;
}
.my_link_list:last-child{
  border-bottom: none;
}
.my_link_list image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}
.my_link_list text{
  font-size: 26rpx;
  color: #999;
}
button::after{
border:none;
}
button {
  background-color: transparent;
  border-radius:0;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  text-align: left;
}
.btn-hover{
  background-color: transparent;
}