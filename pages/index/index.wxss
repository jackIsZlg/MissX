.qry{
  width: 710rpx;
  height: 62rpx;
  background-color: #f7f7f7;
  border-radius: 80rpx;
  display: flex;
  align-items: center;
  margin: 0 auto;
}
.qry .qry-icon{
  background-image: url(https://miss.xuanyantech.com/img/WeChat/index-qry.png);
  width: 28rpx;
  height: 28rpx;
