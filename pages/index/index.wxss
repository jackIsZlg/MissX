}

.slide-title{
  font-size: 32rpx;
  color: #999999;
  display: flex;
  width: 100%;
  padding: 0 60rpx;
  box-sizing: border-box;
  justify-content: space-between;
  margin-bottom: 18rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.slide-title div{
  min-width: 100rpx;
  text-align: center;
}

.slide-title div.active{
  color: #fe989a;
}

.slide-title div span{
   width: 100rpx;
   height: 4rpx;
   display: block;
   margin: 18rpx auto 0;
}
.slide-title div.active span{
   background-color: #ffc4bf;
}

.seckill-tip{
  margin-top: 62rpx;
  height: 50rpx;
