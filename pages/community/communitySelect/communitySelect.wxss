page{
   height:100%;
   width: 100%;
   background-size:cover; 
    background-image: url('https://miss.xuanyantech.com/img/WeChat/communityIntro-bg.png');
}


.select{
  position: absolute;
  top: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 710rpx;
  background-color: white;
  text-align: center;
  border-radius: 10rpx;
}

.select .title{
  height: 110rpx;
  background-color: #fbfbfb;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  line-height: 110rpx;
  font-size: 26rpx;
  color: #999;
}

.input-view{
  font-size: 26rpx;
  color: #333;
  margin-bottom: 86rpx;
}

.input-view.top{
  margin-top: 60rpx;
}

.input-view .name{
  display: inline-block;
}

.input-view .name input{
  width: 340rpx;
  border-bottom:1rpx solid #999;
}

.input-view .name picker{
  width: 340rpx;
  border-bottom:1rpx solid #999;
}

.input-view .name span{
  width: 80rpx;
  display: inline-block;
}

.button{
  width: 586rpx;
  height: 110rpx;
  background-color: red;
  background: url('https://miss.xuanyantech.com/img/WeChat/communitySelect.png');
  background-size: cover;
  margin: 114rpx auto 80rpx; 
}

